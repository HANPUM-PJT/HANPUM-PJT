{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components/*"],
      "@common/*": ["src/components/common/*"],
      "@models/*": ["src/models/*"],
      "@pages/*": ["src/pages/*"],
      "@constants": ["src/constants/index"],
      "@icon": ["src/assets/icons/index"],
      "@atoms/*": ["src/atoms/*"],
      "@hooks/*": ["src/hooks/*"],
      "@imgs/*": ["src/assets/img/*"],
      "@utils/*": ["src/utils/*"],
      "@api/*": ["src/api/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
